{
  "name": "ChemConverterApp",
  "build": {
    "dockerfile": "Dockerfile.devcontainer",
    "context": ".."
  },
  // Use 'forwardPorts' to make a list of ports inside the container available locally.
  "forwardPorts": [
    5000, // Port for Flask interface
    8000 // Port for the web server, 8000 is default for gunicorn
  ],
  // Ensure the environment
  "postStartCommand": "pip install --upgrade pip && pip install --upgrade --config-settings=\"cmake.args=-DFETCH_ZLIB_NG=ON\" .[dev] && pip freeze > dependencies.list",
  "remoteUser": "debian",
  "workspaceMount": "source=${localWorkspaceFolder},target=/home/debian/chem_converter,type=bind",
  "workspaceFolder": "/home/debian/chem_converter",
  // Inject variables from file into the container.
  "runArgs": ["--env-file", "${localWorkspaceFolder}/.env.dev"],
  // Configure tool-specific properties.
  "customizations": {
    // Configure properties specific to VS Code.
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.autopep8",
        "ms-python.vscode-pylance",
        "github.vscode-github-actions"
      ],
      "settings": {
        "[python]": {
          "python.defaultInterpreterPath": "/usr/local/bin/python",
          "editor.defaultFormatter": "ms-python.autopep8"
        },
        "editor.formatOnSave": true
      }
    }
  }
}
